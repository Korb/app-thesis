        <item name="colorAccent">#bf616a</item>
        <item name="textColorAlertDialogListItem">#65737e</item>
    </style>

    <style name="gruvbox_dialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">#282828</item>
        <item name="android:textColor">#928374</item>
