        <item name="colorAccent">#cc241d</item>
        <item name="textColorAlertDialogListItem">#ebdbb2</item>
    </style>

    <!-- Icons of actionBar and overflow menu, etc..-->
    <style name="light.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow and the overflow button! -->
        <item name="colorControlNormal">#2b303b</item> <!-- sets the color for the back arrow -->
        <item name="actionOverflowButtonStyle">@style/light.actionOverflowButtonStyle</item> <!-- sets the style for the overflow button -->
    </style>

    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="light.actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#2b303b</item>
    </style>

    <!-- Icons of actionBar and overflow menu, etc..-->
